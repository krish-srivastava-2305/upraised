generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URI")
}

enum GadgetStatus {
  AVAILABLE
  DEPLOYED
  DESTROYED
  DECOMMISSIONED
}

model Gadget {
  id          String       @id @default(uuid())
  name        String
  status      GadgetStatus @default(AVAILABLE)
  destroyedAt DateTime?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@map("gadgets")
}
